@using ArtAuction.Core.Domain.Enums

@{
    ViewData["Title"] = "Auction Catalog Page";
}

<div class="text-center">
    <h1 class="display-4">Auction Catalog</h1>
    @if (User.Identity.IsAuthenticated && User.IsInRole(UserRole.Seller.ToString()))
    {
        <a asp-controller="AuctionCatalog" asp-action="AddAuction" class="btn btn-lg btn-primary">Create Auction</a>
    }
    <p>Auction Catalog</p>
</div>

<div class="d-flex flex-column flex-md-row">
    <div class="col-md-3 p-2">Filters</div>
    <div class="col-md-9 p-2">
        <div class="d-flex justify-content-between">
            <div>Sorting</div>
            <div>On page</div>
        </div>
        <div class="d-flex flex-wrap justify-content-around">
            <div class="col-xl-4 col-sm-6 p-2">Card1</div>
            <div class="col-xl-4 col-sm-6 p-2">Card2</div>
            <div class="col-xl-4 col-sm-6 p-2">Card3</div>
            <div class="col-xl-4 col-sm-6 p-2">Card4</div>
            <div class="col-xl-4 col-sm-6 p-2">Card5</div>
        </div>
        <div class="d-flex justify-content-center">Paging</div>
    </div>
</div>