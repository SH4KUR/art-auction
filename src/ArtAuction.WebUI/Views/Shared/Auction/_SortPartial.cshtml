@using ArtAuction.WebUI.Models.AuctionCatalog
@model ArtAuction.WebUI.Models.AuctionCatalog.AuctionCatalogViewModel

<div class="d-flex justify-content-between">
    <div class="form-group form-inline">
        <select asp-for="Sort" class="form-control" asp-items="@Html.GetEnumSelectList<Sort>()"></select>
        <input type="submit" class="btn btn-primary ml-2" value="Sort"
               asp-route-category="@string.Join(',', Model.Filter.Categories.Where(c=>c.Selected).Select(c=>c.Value))"
               asp-route-minCurrentPrice="@Model.Filter.MinCurrentPrice"
               asp-route-maxCurrentPrice="@Model.Filter.MaxCurrentPrice"
               asp-route-onPage="@Model.OnPage"
               asp-route-sort="@Model.Sort" />
    </div>
    <div class="form-group">
        <select asp-for="OnPage" class="form-control" asp-items="@Html.GetEnumSelectList<OnPage>()"></select>
    </div>
</div>