@model ArtAuction.WebUI.Models.Profile.UserProfileViewModel

<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addComplaintModal">
    Add Complaint
</button>

<!-- AddComplaintModal -->
<div class="modal fade" id="addComplaintModal" tabindex="-1" role="dialog" aria-labelledby="addComplaintModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <form asp-action="AddComplaint" asp-controller="Profile">
                <div class="modal-header">
                    <h5 class="modal-title" id="addComplaintModalLabel">Add Complaint</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input id="UserLoginOn" name="UserLoginOn" value="@Model.User.Login" hidden />

                    <div class="form-group">
                        <label class="control-label" autofocus>Complaint</label>
                        <textarea id="Description" name="Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Send Complaint" />
                </div>
            </form>

        </div>
    </div>
</div>