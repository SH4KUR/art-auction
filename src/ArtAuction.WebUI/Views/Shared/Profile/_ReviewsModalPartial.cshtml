@model ArtAuction.WebUI.Models.Profile.UserProfileViewModel

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ratesModal">
    Show Reviews
</button>

<!-- RatesModal -->
<div class="modal fade" id="ratesModal" tabindex="-1" role="dialog" aria-labelledby="ratesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ratesModalLabel">Reviews</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">From</th>
                        <th scope="col">Rate</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    
                    @foreach (var review in Model.Reviews)
                    {
                        <tr>
                            <th scope="row">@review.DateTime.ToString("MM/dd/yyyy HH:mm:ss")</th>
                            <td>@review.UserLoginFrom</td>
                            <td>@review.Rate</td>
                            <td>@review.Description</td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>